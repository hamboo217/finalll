<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <!--元件的漸層-->
            <gradient
                android:startColor="#BEBEBE"
                android:centerColor="#D0D0D0"
                android:endColor="#E0E0E0"
                android:angle="270" />

            <!--邊框顏色、粗細-->

            <!--圓角-->
            <corners android:radius="100dp" />

            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>