<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <!--元件的漸層-->
            <gradient
                android:startColor="#FF9797"
                android:centerColor="#FFB5B5"
                android:endColor="#FFD2D2"
                android:angle="270" />

            <!--邊框顏色、粗細-->

            <!--圓角-->
            <corners android:radius="20dp" />

            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>